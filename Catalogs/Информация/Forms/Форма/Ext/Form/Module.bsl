		Попытка
			Ошибка.НомерСтроки = Число(СтрПолучитьСтроку(Подстроки, 1));
		Исключение
			Ошибка.НомерСтроки = 0;
		КонецПопытки;
		
		Попытка
			Ошибка.НомерКолонки = Число(СтрПолучитьСтроку(Подстроки, 2));
		Исключение
			Ошибка.НомерКолонки = 1;
