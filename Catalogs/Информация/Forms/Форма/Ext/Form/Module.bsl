			Если ТипЗнч(View().updateMetadata(ОписаниеМетаданных, АдресОбновления)) = Тип("Булево") Тогда
				View().triggerSuggestions();
			КонецЕсли;
			
		КонецЕсли;
		
	Иначе
		
		ОписаниеМетаданных = ПолучитьСписокОбъектовМетаданных(ПараметрыЗапроса, АдресОбновления);
		
